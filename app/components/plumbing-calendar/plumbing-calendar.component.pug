doctype html
ScrollView
    StackLayout(orientation="vertical", height="100%")
        StackLayout(orientation="horizontal", marginTop="30", marginBottom="30")
            Image(src="~/assets/img/back.png", height="20", width="20%")
            StackLayout(width="80%")
                Label.regular.title(text="Elige la fecha en tu calendario")            
        StackLayout(orientation="vertical", height="100%")
            RadCalendar(id="calendar", height="70%")
            StackLayout(orientation="vertical", height="20%", paddingTop="20")
                StackLayout(orientation="horizontal", width="100%")
                    //Lista de historial
                    StackLayout(orientation="vertical", width="50%")
                        Label.title(text="Resumen del mes")                
                        StackLayout(orientation="horizontal", padding="10")
                            Image(src="~/assets/img/green.png", height="20", width="20", verticalAlignment="center")
                            StackLayout(orientation="vertical", paddingLeft="10")
                                Label(text="Reparación lavabo")
                                Label.grey-text(text="11/07/2018")
                        StackLayout(orientation="horizontal", padding="10")
                            Image(src="~/assets/img/green.png", height="20", width="20", verticalAlignment="center")
                            StackLayout(orientation="vertical", paddingLeft="10")
                                Label(text="Reparación lavabo")
                    //Botones de citas
                    StackLayout(orientation="vertical", width="50%")
                        StackLayout(orientation="horizontal", width="100%", height="50%")
                            StackLayout.item(orientation="vertical", width="50%", padding="10", margin="5")
                                Image(src="~/assets/img/red.png", height="20", horizontalAlignment="center")
                                Label(text="Urgente", horizontalAlignment="center")
                            StackLayout.item(orientation="vertical", width="50%", padding="10", margin="5")
                                Image(src="~/assets/img/blue.png", height="20", horizontalAlignment="center")
                                Label(text="Abierto", horizontalAlignment="center")
                        StackLayout(orientation="horizontal", width="100%", height="50%")
                            StackLayout.item(orientation="vertical", width="50%", padding="10", margin="5")
                                Image(src="~/assets/img/yellow.png", height="20", horizontalAlignment="center")
                                Label(text="Cancelado", horizontalAlignment="center")
                            StackLayout.item(orientation="vertical", width="50%", padding="10", margin="5")
                                Image(src="~/assets/img/green.png", height="20", horizontalAlignment="center")
                                Label(text="Agendado", horizontalAlignment="center")
            StackLayout(verticalAlignment="bottom", height="10%")
                Button.bottom-button(text="Continuar", [nsRouterLink]="['/set-payment']")