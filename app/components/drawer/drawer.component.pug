RadSideDrawer(tkExampleTitle, tkToggleNavButton)
    StackLayout.sideStackLayout(tkDrawerContent)
        StackLayout.sideTitleStackLayout
            Image.img-rounded(src="{{user.image}}", height="100", width="100", stretch="aspectFill")
            Label(text='Hola {{user.name}}')
        StackLayout.sideStackLayout
            StackLayout.sideItem(orientation="horizontal", (tap)="navigate('/home')")
                Image(height="20", src="~/assets/img/home.png", verticalAlignment="center",)
                Label.sideLabel(text='Home', verticalAlignment="center",)
            StackLayout.sideItem(orientation="horizontal", (tap)="navigate('/my-orders')")
                Image(height="20", src="~/assets/img/play-button.png", verticalAlignment="center",)
                Label.sideLabel(text='Servicios', verticalAlignment="center",)
            StackLayout.sideItem(orientation="horizontal")
                Image(height="20", src="~/assets/img/discount.png", verticalAlignment="center",)
                Label.sideLabel(text='Promociones', verticalAlignment="center",)
            StackLayout.sideItem(orientation="horizontal")
                Image(height="20", src="~/assets/img/history.png", verticalAlignment="center",)
                Label.sideLabel(text='Historial', verticalAlignment="center",)
            StackLayout.sideItem(orientation="horizontal",  (tap)="navigate('/help')")
                Image(height="20", src="~/assets/img/help.png", verticalAlignment="center",)
                Label.sideLabel(text='Ayuda', verticalAlignment="center",)
            StackLayout.sideItem(orientation="horizontal",  (tap)="navigate('/settings')")
                Image(height="20", src="~/assets/img/settings.png", verticalAlignment="center",)
                Label.sideLabel(text='Configuración', verticalAlignment="center",)
            StackLayout.center(orientation="horizontal")
                Image(width="20%", height="20", src="~/assets/img/faucet.png")
                Image(width="20%", height="20", src="~/assets/img/plug.png")
                Image(width="20%", height="20", src="~/assets/img/monitor.png")
                Image(width="20%", height="20", src="~/assets/img/paintbrush.png")
                Image(width="20%", height="20", src="~/assets/img/spray.png")
        Image.image-margin(src="~/assets/img/logoicon.png", height="60")
        Label(text='Cerrar sesión', color='lightgray', padding='15', style='horizontal-align: center', (tap)='logout()')
    
    StackLayout(tkMainContent)
        StackLayout.menu-bar(orientation="horizontal")
            Image(height="15", width="20%", (tap)="openDrawer()", src="~/assets/img/menu.png")
            Image(height="25" width="60%" src="~/assets/img/logoicon.png")
            Image(height="25" width="10%" src="~/assets/img/crane.png")
            Image(height="20" width="10%" src="~/assets/img/search.png")
        page-router-outlet
