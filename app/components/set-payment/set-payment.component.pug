ScrollView.page
    StackLayout(orientation="vertical", height="100%")
        StackLayout(orientation="horizontal", marginTop="30", marginBottom="30")
            Image(src="~/assets/img/back.png", height="20", width="20%")
            StackLayout(width="80%")
                Label.regular.title(text="Selecciona el m√©todo de pago")
        
        GridLayout(height="70%", columns="*,*", rows="auto,auto,auto")
            StackLayout.background-white.item(*ngFor="let card of cards; index as i", [class.selected]="card.selected", padding="5", margin="5", verticalAlignment="center", horizontalAlignment="center", [row]="i/2", [col]="i%2", (tap)="select(card)", height="120", orientation="vertical")
